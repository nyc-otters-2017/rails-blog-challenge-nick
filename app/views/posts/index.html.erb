<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <h2>All Posts</h2>
    </div>
    <div class="col-sm-6 col-md-6 col-lg-6 form-container">
      <% if logged_in? %>
      <%= link_to "Add Post", new_user_post_path(current_user), :class => "btn btn-default" %>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-12 col-lg-12">
      <%= render "shared/article" %>
    </div>
  </div>
</div>
